<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">


    <EditTextPreference
        android:capitalize="words"
        android:defaultValue="@string/pref_default_wifiname"
        android:inputType="textCapWords"
        android:key="wifi_name"
        android:maxLines="1"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:title="@string/pref_title_WiFi_name"/>

    <EditTextPreference
        android:capitalize="words"
        android:defaultValue="@string/pref_default_wifiport"
        android:inputType="textCapWords"
        android:key="wifi_port"
        android:maxLines="1"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:title="@string/pref_title_WiFi_port"/>

    <EditTextPreference
        android:capitalize="words"
        android:defaultValue="@string/pref_default_brickid"
        android:inputType="textCapWords"
        android:key="brick_id"
        android:maxLines="1"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:title="@string/pref_title_Brick_id"/>

