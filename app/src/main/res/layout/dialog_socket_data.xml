<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <!-- Bezeichnung -->
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
                  android:id="@+id/socketDataName"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:orientation="horizontal">

        <TextView
            android:id="@+id/lbl_socket_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bezeichnung"/>

        <EditText
            android:id="@+id/edit_socket_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:imeOptions="actionDone"
            android:inputType="text"/>
    </LinearLayout>

    <!-- Type -->
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/socketDataType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/socketDataName"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/lbl_socket_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Type"/>

        <EditText
            android:id="@+id/edit_socket_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:imeOptions="actionDone"
            android:inputType="text"/>
    </LinearLayout>

    <!-- HouseCode -->
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/socketDataHouseCode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/socketDataType"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/lbl_socket_HouseCode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="HouseCode"/>

        <EditText
            android:id="@+id/edit_socket_HouseCode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:imeOptions="actionDone"
            android:inputType="number"/>
    </LinearLayout>

    <!-- RemoteCode -->
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/socketDataRemoteCode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/socketDataHouseCode"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/lbl_socket_remoteCode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="RemoteCode"
            />

        <EditText
            android:id="@+id/edit_socket_remoteCode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:imeOptions="actionDone"
            android:inputType="number"/>
    </LinearLayout>

    <!-- Ok-/Cancelbuttons -->
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/socketDataRemoteCode"
        android:id="@+id/socket">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            android:text="Abbruch"
            android:id="@+id/btnCancel"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            android:text="Speichern"
            android:id="@+id/btnOk"/>
    </LinearLayout>



</RelativeLayout>